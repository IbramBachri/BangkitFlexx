<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_chat_other_private"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="40dp"
    tools:ignore="RtlSymmetry"
    android:gravity="left">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_other"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/message_chat_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            style="@style/regular_12"
            android:gravity="left"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/time_chat_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/message_chat_other"
            android:gravity="left"
            android:text="23:59"
            android:paddingRight="5dp"
            style="@style/regular_8_gray"/>

    </RelativeLayout>

</RelativeLayout>
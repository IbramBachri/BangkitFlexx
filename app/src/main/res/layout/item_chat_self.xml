<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_chat_self"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:paddingStart="40dp"
    tools:ignore="RtlSymmetry"
    android:gravity="right">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_self"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/message_chat_self"
            style="@style/regular_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="5dp"
            android:text="Message" />

        <TextView
            android:id="@+id/time_chat_self"
            style="@style/regular_8_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_chat_self"
            android:layout_alignParentEnd="true"
            android:gravity="left"
            android:paddingRight="5dp"
            android:text="23:59" />

    </RelativeLayout>

</RelativeLayout>